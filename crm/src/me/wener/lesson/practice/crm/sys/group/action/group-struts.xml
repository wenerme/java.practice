<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <!--使用regex进行匹配-->
    <constant name="struts.enable.SlashesInActionNames" value="true"/>
    <constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
    <constant name="struts.patternMatcher" value="regex"/>

    <package name="groupPackage" extends="struts-default" namespace="/sys/group">

        <!-- 重定向到默认显示页面 -->
        <action name="">
            <result type="redirectAction">list</result>
        </action>
        <action name="/">
            <result type="redirectAction">list</result>
        </action>


        <!--显示列表-->
        <action name="list/{pageNo}" method="list" class="me.wener.lesson.practice.crm.sys.group.action.GroupAction">
            <result type="dispatcher">/WEB-INF/jsp/sys/group/list.jsp</result>
        </action>
        <action name="list">
            <result type="redirectAction">list/</result>
        </action>

        <!--添加操作-->
        <action name="add" method="add" class="me.wener.lesson.practice.crm.sys.group.action.GroupAction">
            <result name="input">/WEB-INF/jsp/sys/group/add.jsp</result>
            <result type="redirectAction">list</result>
        </action>

        <!--搜索操作-->
        <action name="search" method="search" class="me.wener.lesson.practice.crm.sys.group.action.GroupAction">
            <result type="chain">list</result>
        </action>

    </package>

</struts>