<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <!--使用regex进行匹配-->
    <constant name="struts.enable.SlashesInActionNames" value="true"/>
    <constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
    <constant name="struts.patternMatcher" value="regex"/>

    <package name="userPackage" extends="struts-default" namespace="/sys/user">

        <!--重定向 到默认-->
        <action name="">
            <result type="redirectAction">list</result>
        </action>
        <action name="/">
            <result type="redirectAction">list</result>
        </action>

        <!--显示列表-->
        <action name="list/{pageNo}" method="list" class="me.wener.lesson.practice.crm.sys.user.action.UserAction">
            <result type="dispatcher">/WEB-INF/jsp/sys/user/list.jsp</result>
        </action>
        <action name="list">
            <result type="redirectAction">list/</result>
        </action>

        <!-- 三个操作统一 enable|disable|delete -->
        <action name="{action:enable|disable|delete}" method="{1}"
                class="me.wener.lesson.practice.crm.sys.user.action.UserAction">
            <result type="redirectAction">list</result>
        </action>


        <!--添加操作-->
        <action name="add" method="add" class="me.wener.lesson.practice.crm.sys.user.action.UserAction">
            <result name="input">/WEB-INF/jsp/sys/user/add.jsp</result>
            <result type="redirectAction">list</result>
        </action>

        <!--搜索操作-->
        <action name="search" method="search" class="me.wener.lesson.practice.crm.sys.user.action.UserAction">
            <result type="redirectAction">list</result>
        </action>

    </package>

</struts>