    <package name="adminPkg" extends="struts-default" namespace="/menu">
        <!--默认为进入菜单界面-->
        <default-action-ref name="/"/>
        <action name="/" method="menu" class="me.wener.lesson.practice.crm.sys.admin.action.AdminAction">
            <result name="login" type="redirectAction">
                login
            </result>
            <result>
                /WEB-INF/jsp/menu/index.jsp
            </result>
        </action>

        <!--登录操作-->
        <action name="login" method="login" class="me.wener.lesson.practice.crm.sys.admin.action.AdminAction">
            <result type="redirectAction">
                /
            </result>
            <result name="input">
                /WEB-INF/jsp/menu/login.jsp
            </result>
        </action>

        <!--登出操作-->
        <action name="logout" method="logout" class="me.wener.lesson.practice.crm.sys.admin.action.AdminAction">
            <result type="redirectAction">
                login
            </result>
        </action>
    </package>
